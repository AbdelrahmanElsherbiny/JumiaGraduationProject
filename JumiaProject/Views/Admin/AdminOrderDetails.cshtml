@model Order
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --jumia-orange: #f68b1e;
            --jumia-orange-light: #fff3e8;
            --jumia-dark: #2a2a2a;
            --jumia-light: #f9f9f9;
            --jumia-border: #eaeaea;
        }

        body {
            background-color: var(--jumia-light);
            padding-bottom: 50px;
        }

        .order-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
            padding: 2rem;
            margin-bottom: 2rem;
            border: 1px solid var(--jumia-border);
        }

        .order-header {
            border-bottom: 1px solid var(--jumia-border);
            padding-bottom: 1.25rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .order-title {
            color: var(--jumia-dark);
            font-weight: 700;
            font-size: 1.75rem;
            letter-spacing: -0.5px;
            margin: 0;
            position: relative;
            display: inline-block;
        }

            .order-title::after {
                content: '';
                position: absolute;
                bottom: -12px;
                left: 0;
                width: 60px;
                height: 4px;
                background: var(--jumia-orange);
                border-radius: 2px;
            }

        .btn-back {
            background-color: white;
            color: var(--jumia-dark);
            border: 1px solid var(--jumia-border);
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background-color: var(--jumia-orange-light);
                color: var(--jumia-orange);
                border-color: var(--jumia-orange-light);
            }

        .status-badge {
            padding: 0.5em 1em;
            font-weight: 600;
            font-size: 0.85rem;
            border-radius: 20px;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-processing {
            background-color: rgba(255, 193, 7, 0.15);
            color: #ffc107;
        }

        .status-shipped {
            background-color: rgba(220, 53, 69, 0.15);
            color: #dc3545;
        }

        .status-delivered {
            background-color: rgba(40, 167, 69, 0.15);
            color: #28a745;
        }

        .section-card {
            background-color: white;
            border-radius: 10px;
            border: 1px solid var(--jumia-border);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .section-title {
            color: var(--jumia-orange);
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid var(--jumia-border);
        }

        .info-label {
            font-weight: 600;
            color: var(--jumia-dark);
            margin-bottom: 0.25rem;
        }

        .info-value {
            color: #555;
            margin-bottom: 1rem;
        }

        .product-img {
            width: 70px;
            height: 70px;
            object-fit: contain;
            border-radius: 6px;
            border: 1px solid var(--jumia-border);
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

            .timeline::before {
                content: '';
                position: absolute;
                left: 10px;
                top: 0;
                bottom: 0;
                width: 2px;
                background: var(--jumia-orange);
            }

        .timeline-item {
            position: relative;
            margin-bottom: 1.5rem;
            padding-left: 1.5rem;
        }

            .timeline-item::before {
                content: '';
                position: absolute;
                left: -2px;
                top: 5px;
                width: 12px;
                height: 12px;
                border-radius: 50%;
                background: var(--jumia-orange);
                border: 2px solid white;
                box-shadow: 0 0 0 3px rgba(246, 139, 30, 0.2);
            }

        .timeline-date {
            font-size: 0.8rem;
            color: #777;
        }

        .table {
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                background-color: var(--jumia-orange);
                color: white;
                font-weight: 600;
                padding: 1rem;
            }

            .table tbody tr:nth-child(even) {
                background-color: var(--jumia-light);
            }

        .total-row {
            font-weight: 600;
            background-color: var(--jumia-orange-light) !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .order-container {
                padding: 1.5rem;
            }

            .order-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="order-container">
            <!-- Header -->
            <div class="order-header">
                <h2 class="order-title">
                    <i class="bi bi-receipt"></i> Order #@Model.OrderId
                </h2>
                <div>
                    @if (Model.OrderStatus == "Processing")
                    {
                        <span class="status-badge status-processing">
                            <i class="bi bi-hourglass-split"></i> Processing
                        </span>
                    }
                    else if (Model.OrderStatus == "Shipped")
                    {
                        <span class="status-badge status-shipped">
                            <i class="bi bi-truck"></i> Shipped
                        </span>
                    }
                    else
                    {
                        <span class="status-badge status-delivered">
                            <i class="bi bi-check-circle"></i> Delivered
                        </span>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between mb-4">
                <div></div>
                <a asp-action="Index" asp-controller="Admin" asp-route-sectionName="Orders" asp-route-pageNum="@ViewBag.currentPage" class="btn-back  text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </a>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <!-- Order Summary Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-cart-check"></i> Order Summary
                        </h5>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@Url.Content(item.Product.ProductImages.FirstOrDefault(p=>p.IsPrimary ==true).ImageUrl)"
                                                         alt="@item.Product.Name"
                                                         class="product-img me-3">
                                                    <div>
                                                        <div>@item.Product.Name</div>
                                                        <small class="text-muted">@item.Product.Code</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.PriceAtTime.ToString("C")</td>
                                            <td>@item.Quantity</td>
                                            <td>@((item.PriceAtTime * item.Quantity).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Order Timeline Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-clock-history"></i> Order Timeline
                        </h5>
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-date">@Model.OrderDate?.ToString("MMM dd, yyyy hh:mm tt")</div>
                                <div class="timeline-content">
                                    <strong>Order Placed</strong>
                                    <p class="mb-0">Order was successfully placed.</p>
                                </div>
                            </div>

                            @foreach (var tracking in Model.ShippingTrackings.OrderBy(t => t.LastUpdated))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-date">@tracking.LastUpdated?.ToString("MMM dd, yyyy hh:mm tt")</div>
                                    <div class="timeline-content">
                                        <strong>@tracking.ShippingStatus</strong>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Order Information Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-info-circle"></i> Order Information
                        </h5>
                        <div class="mb-3">
                            <div class="info-label">Order Date</div>
                            <div class="info-value">@Model.OrderDate?.ToString("MMM dd, yyyy hh:mm tt")</div>
                        </div>
                        <div class="mb-3">
                            <div class="info-label">Order Status</div>
                            <div class="info-value">
                                @if (Model.OrderStatus == "Processing")
                                {
                                    <span class="status-badge status-processing">
                                        <i class="bi bi-hourglass-split"></i> Processing
                                    </span>
                                }
                                else if (Model.OrderStatus == "Shipped")
                                {
                                    <span class="status-badge status-shipped">
                                        <i class="bi bi-truck"></i> Shipped
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-delivered">
                                        <i class="bi bi-check-circle"></i> Delivered
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="info-label">Shipping Method</div>
                            <div class="info-value">@Model.ShippingMethod.ShippingMethodName - @Model.ShippingMethod.EstimatedDeliveryTime</div>
                        </div>
                        <div class="mb-3">
                            <div class="info-label">Tracking Number</div>
                            <div class="info-value">
                                @if (Model.ShippingTrackings.Any())
                                {
                                    @Model.ShippingTrackings.First().TrackingNumber
                                }
                                else
                                {
                                    <span class="text-muted">Not available yet</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Customer Information Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-person"></i> Customer Information
                        </h5>
                        <div class="mb-3">
                            <div class="info-label">Customer Name</div>
                            <div class="info-value">@Model.User.UserName</div>
                        </div>
                        <div class="mb-3">
                            <div class="info-label">Email</div>
                            <div class="info-value">@Model.User.Email</div>
                        </div>
                        <div class="mb-3">
                            <div class="info-label">Phone</div>
                            <div class="info-value">@Model.User.PhoneNumber</div>
                        </div>
                    </div>

                    <!-- Shipping Address Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-geo-alt"></i> Shipping Address
                        </h5>
                        <div class="info-value">
                            @Model.Address.Street<br>
                            @Model.Address.City<br>
                            @Model.Address.Country
                        </div>
                    </div>

                    <!-- Payment Information Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-credit-card"></i> Payment Information
                        </h5>
                        @if (Model.Payments.Any())
                        {
                            var payment = Model.Payments.First();
                            <div class="mb-3">
                                <div class="info-label">Payment Method</div>
                                <div class="info-value">@payment.PaymentMethod</div>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Payment Status</div>
                                <div class="info-value">
                                    @if (payment.PaymentStatus == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@payment.PaymentStatus</span>
                                    }
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Amount Paid</div>
                                <div class="info-value">@payment.Amount.ToString("C")</div>
                            </div>
                            <div class="mb-3">
                                <div class="info-label">Transaction Date</div>
                                <div class="info-value">@payment.PaymentDate?.ToString("MMM dd, yyyy hh:mm tt")</div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">No payment information available</div>
                        }
                    </div>

                    <!-- Order Totals Section -->
                    <div class="section-card">
                        <h5 class="section-title">
                            <i class="bi bi-receipt"></i> Order Totals
                        </h5>
                        <div class="d-flex justify-content-between mb-2">
                            <div class="info-label">Subtotal:</div>
                            <div>@((Model.TotalAmount - Model.Taxes - Model.ShippingMethod.Cost).ToString("C"))</div>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div class="info-label">Shipping:</div>
                            <div>@Model.ShippingMethod.Cost.ToString("C")</div>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div class="info-label">Tax:</div>
                            <div>@Model.Taxes.ToString("C")</div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold fs-5">
                            <div>Total:</div>
                            <div>@Model.TotalAmount.ToString("C")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>