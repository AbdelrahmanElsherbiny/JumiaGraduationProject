@model ProfileVM
<link href="~/css/profile.css" rel="stylesheet" />
<div class="d-flex gap">
	<div>
		@await Html.PartialAsync("_SideBarPartial")
	</div>
	<div class="profile-container col-9">
		<header class="profile-header">
			<h1 class="text-header">Account Overview</h1>
		</header>
		<div class="d-flex">
			<div class="table-left">
				<header class="profile-header">
					<p class="header-box">ACCOUNT DETAILS</p>
				</header>
				<div><span class="name">@Model.User.UserName</span></div>
				<div><span class="table-text">@Model.User.Email</span></div>
			</div>
			<div class="table-right">
				<header class="profile-header">
					<div class="right">
						<p class="header-box">ADDRESS BOOK</p>
						<a asp-controller="Profile" asp-action="EditAddress" asp-route-id="@Model.User.UserId">
							<i class="pen fa-solid fa-pen"></i>
						</a>
					</div>
				</header>
				<p class="table-text">Your default shipping address:</p>
				<div><span class="table-text">@Model.User.UserName</span></div>
				<div><span class="table-text">@Model.Address.Street</span></div>
				<div><span class="table-text">@Model.Address.Country, @Model.Address.City</span></div>
	            <div><span class="table-text">@Model.User.PhoneNumber</span></div>
			</div>
		</div>
		<div class="d-flex">
			<div class="table-left">
				<header class="profile-header">
					<p class="header-box">JUMIA STORE CREDIT</p>
				</header>
				
			</div>
			<div class="table-right">
				<header class="profile-header">
					<div class="right">
						<p class="header-box">NEWSLETTER PREFERENCE</p>
						
					</div>
				</header>
				<p class="table-text">Manage your email communications to stay updated with the latest news and offers.</p>
				<div class="side">
				     <button class="side-bar-button">Edit Newsletter preferences</button>
		    	</div>
			</div>
		</div>
	</div>
</div>