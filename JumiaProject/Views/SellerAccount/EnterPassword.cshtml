@model SellerPasswordViewModel
@{
    Layout = "_RegisterSellerLayout";
    ViewBag.Title = "Enter Password";
}

 <div class="container d-flex justify-content-center align-items-center py-5">
        <div class="row  d-flex justify-content-center  mt-5">
            <div class="col-lg-5  col-md-4 col-sm-8 py-5 d-flex justify-content-center align-items-center">
            <img src="~/images/signup.svg" alt="" class="w-100">
            </div>
            <div class="col-lg-7 col-md-8 col-sm-9  row justify-content-center">
                <div class="px-3 py-2 col-lg-8 col-md-10 col-sm-12">
                    <div class="all-container d-flex  justify-content-center align-items-center flex-column">
                        <h2 class="welcome">Setup your account</h2>
                        <p class="text-muted registerText">Enter your Password</p>
                        <div class="d-flex justify-content-center align-items-center text-center flex-column w-100 py-4 bg-white">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form asp-action="EnterPassword" method="post" class=" d-flex justify-content-center align-items-center flex-column w-100 py-1 px-4 bg-white ">
                                <input asp-for="Phone" class="form-control my-input mt-3 mb-1 p-3 bg-transparent" placeholder="Phone*">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                            <input asp-for="Password" class="form-control my-input mt-3 mb-1 p-3 bg-transparent" placeholder="Password*">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input asp-for="ConfirmPassword" class="form-control my-input mt-3 mb-1 p-3 bg-transparent" placeholder="Confirm Password*">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <button class=" mynew-btn continue1-btn border border-0 w-100 mt-3 mb-0 rounded fw-bold" type="submit">Next</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

