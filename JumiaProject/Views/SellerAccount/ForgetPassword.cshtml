@model SellerEmailViewModel
@{

    Layout = "_RegisterSellerLayout";
    ViewBag.Title = "Forget Password";
}
<div class="container d-flex justify-content-center align-items-center py-5">
    <div class="row  d-flex justify-content-center  mt-5">
        <div class="col-lg-5  col-md-4 col-sm-8 py-5 d-flex justify-content-center align-items-center">
            <img src="~/images/signup.svg" alt="sign up" class="w-100">
        </div>
        <div class="col-lg-7 col-md-8 col-sm-9  row justify-content-center">
            <div class="px-3 py-2  col-lg-8 col-md-10 col-sm-12">
                <div class=" d-flex justify-content-center align-items-center flex-column">
                    <h2 class="welcome">Set up your Account</h2>
                    <p class="text-muted registerText text-center">Please enter your email address to send verify code </p>
                    <div class="d-flex justify-content-center align-items-center text-center flex-column w-100 bg-white px-2 ">
                        <div asp-validation-summary="All" class="text-danger my-2"></div>
                        <form asp-action="ForgetPassword" method="post" class=" d-flex justify-content-center align-items-center flex-column w-100 pb-2 bg-white ">
                            <label class="confirmp-lable">Email</label>
                            <input asp-for="Email" class="form-control my-input mt-3 mb-1 p-3 bg-transparent" placeholder="Enter Your Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <button class="my-btn continue-btn border border-0 w-100 mt-3 mb-2 rounded fw-bold" type="submit">Verify</button>
                            <label class="text-muted">Only for sellers registered & selling in their own country</label>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
