<div class="header col-12">
	<div class="flash-sale col-12">
		<img src="/images/home/flash-sale.png" class="col-10" />
	</div>

	<nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm p-0 col-12">
		<div class="container col-12">
			<!-- logo -->
			<a class="navbar-brand col-2 d-flex justify-content-center" asp-controller="Home" asp-action="Index">
				<img src="~/images/home/logo.png" alt="Jumia" class="jumia-logo ">
			</a>
			
			<div class="collapse navbar-collapse" id="navbarContent">
				<!-- search -->
				<div class="d-flex mx-3 flex-grow-1 justify-content-center search-container px-4 col-7position-relative">
					<div class="input-group w-100 custom-search-box">
						<input type="text" id="search-key" name="query" class="form-control" placeholder="🔍 Search products, Brands" autocomplete="off">
						<div>
							<button id="search-btn" class="search">Search</button>
						</div>
					</div>
					<div id="searchResults" class="dropdown-menu show shadow" style="display: none; position: absolute; top: 100%; z-index: 1000;"></div>
					<div id="searchBrandResults" class="dropdown-menu show shadow" style="display: none; position: absolute; top: 100%; z-index: 999;"></div>

				</div>

				<!-- icons -->
				<ul class="navbar-nav">
					<li class="nav-item mx-2">
						<div class="nav-link">
							<div class="nav-button">
								@if (!(User.Identity.IsAuthenticated))
								{
									<div class="hover-orange">
										<i class="acc far fa-user fa-lg"></i>
										<button class="nav d-none d-lg-inline" onclick="showList()">Account</button>
									</div>
									<div id="dropdownList" class="list">
										<div class="sign-in-div">
											<a asp-action="login" asp-controller="account" class="sign-in-button text-decoration-none">Sign In</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-regular fa-user"></i>
											<a href="/Profile/MyAccount" class="icon-list">My Account</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-solid fa-box"></i>
											<a href="/Profile/UserOrders" class="icon-list">Order</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-regular fa-heart"></i>
											<a href="/Profile/UserWishlist" class="icon-list">Wishlist</a>
										</div>
									</div>

								}
								else
								{
									<div class="hover-orange">
										<i class="far fa-user fa-lg"></i>
										<button class="nav d-none d-lg-inline" onclick="showList()">Hi, @User.Identity.Name.Split("@")[0]</button>
									</div>
									<div id="dropdownList" class="list">
										<div class="icon-list-hover">
											<i class="acc fa-regular fa-user"></i>
											<a href="/Profile/MyAccount" class="icon-list">My Account</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-solid fa-box"></i>
											<a href="/Profile/UserOrders" class="icon-list">Order</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-regular fa-envelope"></i>
											<a href="" class="icon-list">Inbox</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-regular fa-heart"></i>
											<a asp-controller="Profile" asp-action="UserWishlist" class="icon-list">Wishlist</a>
										</div>
										<div class="icon-list-hover">
											<i class="fa-regular fa-ticket"></i>
											<a href="" class="icon-list">Vouchers</a>
										</div>

									</div>
								}
							</div>
						</div>
					</li>
				</ul>
				<div class="nav-item mx-2 hover-orange">
					<div class="hover-orange nav-link" href="">
						<i class="far fa-question-circle fa-lg"></i>
						<button class="nav d-none d-lg-inline">Help</button>
					</div>
				</div>
				<div class="nav-item mx-2 hover-orange">
					<a class="nav-link hover-orange position-relative" asp-action="index" asp-controller="cart">
						<i class="fas fa-shopping-cart fa-lg " style="fill: #313133; -webkit-text-stroke: 1px black;"></i>
						@if ((User.Identity.IsAuthenticated))
						{
							@await Html.PartialAsync("_CartCountPartial")
						}
						<span class="d-none d-lg-inline">Cart</span>

					</a>
				</div>
				<div class="nav-item mx-2 hover-orange">
					<a asp-controller="api" asp-action="chat" class="nav-link hover-orange position-relative">
						<i class="fa-regular fa-comment fa-lg" style="fill: #313133; -webkit-text-stroke: 1px black;"></i>	JumiaChat
					</a>
				</div>
			</div>
		</div>
	</nav>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/header.js"></script>
