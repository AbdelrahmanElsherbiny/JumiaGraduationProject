		<script>
			document.addEventListener('DOMContentLoaded', function() {
		// تحديد العنصر النشط بناءً على الصفحة الحالية
		const currentPath = window.location.pathname;
		const links = document.querySelectorAll('.side-line a');

		links.forEach(link => {
			if (link.getAttribute('href') === currentPath) {
				link.parentElement.classList.add('active');

				// تعطيل حدث النقر على العنصر النشط
				link.parentElement.style.pointerEvents = 'none';
			}

			// إضافة حدث النقر للعناصر غير النشطة
			link.addEventListener('click', function(e) {
				document.querySelectorAll('.side-line').forEach(el => {
					el.classList.remove('active');
					el.style.pointerEvents = 'auto';
				});
				this.parentElement.classList.add('active');
				this.parentElement.style.pointerEvents = 'none';
			});
		});
	});
		</script>