@model UserEmailViewModel
@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Login User";
}

<img src="~/images/star.png" alt="Jumia" width="64" height="64" class="my-5" />
<div class="px-3 py-2">
    <div class="all-container d-flex  justify-content-center align-items-center flex-column">
        <h2 class="welcome">Welcome To Jumia</h2>
        <p>Type your e-mail to log in or create a Jumia account.</p>
        <div class="d-flex justify-content-center align-items-center text-center flex-column w-100">
            <div asp-validation-summary="All" class="text-center"></div>
            <form method="post"  asp-action="Login" class=" d-flex justify-content-center align-items-center flex-column w-100">
                <input asp-for="Email" class="form-control my-input mt-3 mb-4 p-3 bg-transparent" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <button class="my-btn continue-btn border border-0 w-100 mt-3 mb-2 rounded fw-bold" type="submit">Continue</button>
            </form>
            <label>By continuing you agree to Jumia’s</label>
            <a href="#" class="terms mb-5">Terms and Conditions</a>
            @* <form asp-controller="Account" asp-action="FacebookLogin" method="post"> *@
            <button class="my-btn facebook-btn border border-0 w-100 my-3 rounded fw-bold" type="submit">Log in with Facebook</button>
            @* </form> *@

            <p class="mt-3">For further support, you may visit the Help Center or contact our customer service team.</p>

        </div>
    </div>
</div>
<img src="~/images/logo.png" alt="Jumia" class="mt-4" />





