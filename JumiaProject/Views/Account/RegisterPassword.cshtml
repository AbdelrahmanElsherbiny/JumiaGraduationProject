@model UserPasswordRegisterViewModel
@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Register Password";
}

<img src="~/images/star.png" alt="Jumia" width="64" height="64" class="mt-5" />
<div class="px-3 pb-2">
    <div class="all-container d-flex  justify-content-center align-items-center flex-column">
        <h2 class="welcome">Welcome To Jumia</h2>
        <p>Please Enter your Password and Confirm Password</p>
        <div class="d-flex justify-content-center align-items-center text-center flex-column w-100">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post" asp-action="RegisterPassword" class=" d-flex justify-content-center align-items-center flex-column w-100">
                <label class="password-lable">Password</label>
                <input asp-for="Password" class="form-control my-input mt-3 mb-4 p-3 bg-transparent" placeholder="Enter Your Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <label class="cpassword-lable">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control my-input mt-3 mb-4 p-3 bg-transparent" placeholder="Enter Your Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <button type="submit" class="my-btn continue-btn border border-0 w-100 mt-3 mb-2 rounded fw-bold">Submit</button>
            </form>
            <p class="mt-3">For further support, you may visit the Help Center or contact our customer service team.</p>

        </div>
    </div>
</div>
<img src="~/images/logo.png" alt="Jumia" class="" />
